<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:smarttable="sap.ui.comp.smarttable"
    xmlns:m="sap.m"
>
    <smarttable:SmartTable
        entitySet="ProfessionalExp"
        tableBindingPath="to_PROEXP"
        initiallyVisibleFields="JobTitle,department,Yesrst,Yearcom,Remarks"
        enableAutoBinding="true"
    >
        <smarttable:customToolbar>
            <m:Toolbar>
                <m:ToolbarSpacer />
                <m:Button
                    press="deleteFormItems"
                    icon="sap-icon://delete"
                />
                <m:Button
                    press="addPE"
                    icon="sap-icon://add"
                />
            </m:Toolbar>
        </smarttable:customToolbar>
    </smarttable:SmartTable>
</c:FragmentDefinition>