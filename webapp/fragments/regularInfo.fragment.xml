<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:smarttable="sap.ui.comp.smarttable"
    xmlns:m="sap.m"
    	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <smarttable:SmartTable
        entitySet="CRregulatoryinformation"
        tableBindingPath="to_CRregulatoryInfo"
        initiallyVisibleFields="DocCategory,DocName,Avialability,DocStatus,EndDate,Remarks"
        enableAutoBinding="true"
        editable="{edit>/isEditable}"
        app:useSmartField ="true"
    >
        <smarttable:customToolbar>
            <m:Toolbar>
                <m:ToolbarSpacer />
                <m:Button
                    press="deleteFormItems"
                    icon="sap-icon://delete"
                />
                <m:Button
                    press="addRegInfo"
                    icon="sap-icon://add"
                />
            </m:Toolbar>
        </smarttable:customToolbar>
    </smarttable:SmartTable>
</c:FragmentDefinition>