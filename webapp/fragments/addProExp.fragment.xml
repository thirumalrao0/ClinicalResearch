<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:smartform="sap.ui.comp.smartform"
    xmlns:smartfield="sap.ui.comp.smartfield"
>
    <Dialog>
        <smartform:SmartForm editable="true">
         
            <smartform:Group>
                <smartform:GroupElement>
                    <smartfield:SmartField
                        editable="false"
                        value="{SiteCode}"
                    />
                </smartform:GroupElement>
                <smartform:GroupElement>
                    <smartfield:SmartField value="{JobTitle}" />
                </smartform:GroupElement>
                <smartform:GroupElement>
                    <smartfield:SmartField value="{department}" />
                </smartform:GroupElement>
                <smartform:GroupElement>
                    <smartfield:SmartField value="{Yesrst}" />
                </smartform:GroupElement>
                <smartform:GroupElement>
                    <smartfield:SmartField value="{Yearcom}" />
                </smartform:GroupElement>
                <smartform:GroupElement>
                    <smartfield:SmartField value="{Remarks}" />
                </smartform:GroupElement>
            </smartform:Group>
        </smartform:SmartForm>
        <Toolbar>
            <Button
                text="Add"
                press="onAdd1"
            />
            <Button
                text="cancel"
                press="onCancel1"
            />
        </Toolbar>
    </Dialog>
</c:FragmentDefinition>
