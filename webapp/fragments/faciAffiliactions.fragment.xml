<c:FragmentDefinition
    xmlns:m="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:smarttable="sap.ui.comp.smarttable"
>
    <smarttable:SmartTable
        entitySet="CRFACILITIESAFFILIATIONS"
        tableBindingPath="to_CRFACILITIESAFFILIATIONS"
        initiallyVisibleFields="Primaryfacility,DepartmentName,Address"
        enableAutoBinding="true"
    >
        <smarttable:customToolbar>
            <m:Toolbar>
                <m:ToolbarSpacer />
                <m:Button
                    press="add1"
                    icon="sap-icon://add"
                />
                <m:Button
                    press="deleteFormItems"
                    icon="sap-icon://delete"
                />
            </m:Toolbar>
        </smarttable:customToolbar>
    </smarttable:SmartTable>
</c:FragmentDefinition>