<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="task.thirumal.controller.View2"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    height="100%"
    xmlns:core="sap.ui.core"
>
<m:Page >
<m:content>
    <ObjectPageLayout showFooter="{edit>/isEditable}"
      
    >
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <heading>
                    <m:Title text="{CRCode}" />
                </heading>
                <actions>
                    <m:Toolbar>
                        <m:ToolbarSpacer />
                        <m:Button
                            text="Edit"
                            press="edit"
                        />
                        <m:Button
                            text="Delete"
                            press="deleteItem"
                        />
                    </m:Toolbar>
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>
        <headerContent>
            <m:Title text="{CRName}"/>
        </headerContent>
        <sections>
            <ObjectPageSection
                titleUppercase="false"
                title="General"
            >
                <subSections>
                    <ObjectPageSubSection
                        title="Name Title"
                        titleUppercase="false"
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="task.thirumal.fragments.nameTitle"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection
                        title="Clinical Phase of Conducted Studies"
                        titleUppercase="false"
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="task.thirumal.fragments.clinicalPCS"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection
                        title="Company,Critical Contact Address"
                        titleUppercase="false"
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="task.thirumal.fragments.compCCA"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection
                        title="Communication"
                        titleUppercase="false"
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="task.thirumal.fragments.communication"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection
                        title="facilities affiliactions"
                        titleUppercase="false"
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="task.thirumal.fragments.faciAffiliactions"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection
                        title="education"
                        titleUppercase="false"
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="task.thirumal.fragments.education"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection
                titleUppercase="false"
                title="Licence Details"
            >
                <subSections>
                    <ObjectPageSubSection
                        title="Professional Experience"
                        titleUppercase="false"
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="task.thirumal.fragments.professionExp"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection
                        title="Licence/ENSE"
                        titleUppercase="false"
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="task.thirumal.fragments.LicenceEnse"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection
                        title="GCP Training"
                        titleUppercase="false"
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="task.thirumal.fragments.gcpTrain"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection
                        title="Research Experience"
                        titleUppercase="false"
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="task.thirumal.fragments.researchExp"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection
                        title="specialties/Sub-Specialties"
                        titleUppercase="false"
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="task.thirumal.fragments.specSubspec"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection
                        title="Total Clinical Research Experience"
                        titleUppercase="false"
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="task.thirumal.fragments.totalClinicalRE"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection
                        title="CheckList"
                        titleUppercase="false"
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="task.thirumal.fragments.checkList"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                    <ObjectPageSubSection
                        title="Regular Information"
                        titleUppercase="false"
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="task.thirumal.fragments.regularInfo"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection
                titleUppercase="false"
                title="Log Details"
            >
                <subSections>
                    <ObjectPageSubSection titleUppercase="false">
                        <blocks>
                            <core:Fragment
                                fragmentName="task.thirumal.fragments.logDetails"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
            <footer>
    <m:OverflowToolbar class="sapUiResponsiveMargin">
    <m:ToolbarSpacer />
        <m:Button
         
            visible="{edit>/isEditable}"
            text="Save"
            press="save"
        />
        <m:Button
           
            visible="{edit>/isEditable}"
            text="Discard"
            press="discard"
        />
        <m:Button
           
            visible="{edit>/isEditable}"
            text="Cancel"
            press="cancel"
        />
 
    </m:OverflowToolbar>
    </footer>
    </ObjectPageLayout>

    </m:content>
    </m:Page>
</mvc:View>
