<mvc:View
    controllerName="task.thirumal.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:sm="sap.ui.comp.smarttable"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <sm:SmartTable
            id="smartTable"
            entitySet="CRGendata"
            initiallyVisibleFields="SiteCode,SiteName,CRCode,CRName,Specialities,CVAvailable,Status"
            enableAutoBinding="true"
        >
            <Toolbar>
                <SearchField
                    search="search"
                    width="70%"
                />
                <Button
                    icon="sap-icon://add"
                    press="addBtn"
                />
                <Button
                    id="deleteId"
                    enabled="false"
                    icon="sap-icon://delete"
                    press="onDelete"
                />
                <Button
                    
                    tooltip="sort"
                    icon="sap-icon://sort"
                    press="sortDialog"
                />
                	
            </Toolbar>
            
            <Table
                mode="MultiSelect"
                selectionChange="onSelectionChange"
            >
                <ColumnListItem
                    press="page2"
                    type="Active"
                />
            </Table>
        </sm:SmartTable>
    </Page>
</mvc:View>
