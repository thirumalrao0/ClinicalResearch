<mvc:View
    controllerName="task.thirumal.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:sm="sap.ui.comp.smarttable"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <sm:SmartTable 
            id="smartTable"
            entitySet="CRGendata"
            initiallyVisibleFields="SiteCode,SiteName,CRCode,CRName,Specialities,CVAvailable,Status"
            enableAutoBinding="true"
        >
            <Toolbar>
                <SearchField
                    search="search"
                    width="70%"
                />
                <Button
                    icon="sap-icon://add"
                    press="addBtn"
                />
                <Button
                    icon="sap-icon://delete"
                    press="onDelete"
                />
            </Toolbar>
            <Table mode="MultiSelect">
                <ColumnListItem
                    press="page2"
                    type="Active"
                />
            </Table>
        </sm:SmartTable>
    </Page>
</mvc:View>
